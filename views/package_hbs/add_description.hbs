<form method="post" , action="/description/save" class="mt-2">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod"
               value="{{#if isCreate}}create{{else}}update{{/if}}"/>
        <div class="form-group row justify-content-center mt-2">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="descriptionID"></label>
            </div>
            <div class=" row justify-content-center">
                <label class="col-form-label" name="descriptionID">{{ descriptionID}}</label>
                <input type="hidden" name="descriptionID" value="{{ descriptionID}}"/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="title">Art's title:</label>
            </div>
            <div class="col-9">
                <input class="form-control" type="text" name="title"/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-2 text-right font-weight-bold">
                <label class="col-form-label" for="artist">Artist's name:</label>
            </div>
            <div class="col-9">
                <input class="form-control" type="text" name="artist"/><br/>
            </div>
        </div>

        <div class="col-2 text-right font-weight-bold">
            <label class="col-form-label" for="body">Artist's Art Description:</label>

        </div>

        <div class="form-group row justify-content-center">
            <textarea class="col-11 form-control" rows=5 name="body"></textarea><br/>
        </div>
        <div class="form-group row justify-content-center">
            <input class="col-2" type="submit" value="Submit"/>
        </div>
    </div>
</form>



