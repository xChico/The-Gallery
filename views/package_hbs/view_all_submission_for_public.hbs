
<div class="container-fluid">
    <div class="row justify-content-center " >
        <div id="carouselExampleIndicators" class="carousel slide" data-interval="false"  data-ride="carousel" style=" width:100%; height: 500px !important;"   >
            <div class="carousel-inner">
                {{#each submissionList}}
                    <div class="carousel-item {{#if @first }}active {{/if}}>">
                        <div class="mt-2">
                            <div class="one ">
                                <h4> Art Title:</h4>
                                <h5> {{title}}</h5>
                                <h4> Art:</h4>
                                <h5> {{artFile}}</h5>
                                <div class="mt-2"> </div>
                                <h4> Artist: </h4>
                                <h5> {{artist}}</h5>
                            </div>
                        </div>
                        <div class = "one">
                        <a class="carousel-control mt-3 btn btn-lg  btn-outline-dark mt-2 "
                           href="/submission/view_for_public?id={{id}}"> Click here to view the artist's description</a>
                        </div>
                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>
