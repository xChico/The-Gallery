<form method="post" , action="/users/infoChanges" class="mt-2">
    <div class="container-fluid">
    </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-2 text-right font-weight-bold">
            <label class="col-form-label" for="title">First Name:</label>
        </div>
        <div class="col-9">

            <input class="form-control" type="text" name="first" value="{{currentUser.name.first}}"><br/>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-2 text-right font-weight-bold">
            <label class="col-form-label" for="title">Last Name:</label>
        </div>
        <div class="col-9">
            <input class="form-control" type="text" name="last" value="{{currentUser.name.last}}"><br/>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-2 text-right font-weight-bold">
            <label class="col-form-label" for="email">Email:</label>
        </div>
        <div class="col-9">
            <input class="form-control" id="email" type="email" name="email" required
                   value="{{currentUser.email}}"><br/>
        </div>
    </div>
    <div class="form-group row justify-content-center ">
        <input class="col-2" type="submit" value="Submit"/>
    </div>

        <div class="one">
            <a href="/users/my_profile"
               class="btn  btn-outline-primary btn-sm text-center mt-1"
               role="button"
               aria-pressed="true">
                Cancel</a>
        </div>



    </div>
</form>



